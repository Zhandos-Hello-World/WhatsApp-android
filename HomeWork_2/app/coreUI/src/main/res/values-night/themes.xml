<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeWork_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="MainBackground">
        <item name="android:background">@color/black_gray_2</item>
    </style>


    <style name="ToolbarBackground">
        <item name="android:background">@color/green</item>
    </style>

    <style name="SubToolbarBackground">
        <item name="android:background">@color/black_gray</item>
    </style>

    <style name="dateTextBackground">
        <item name="android:background">@drawable/date_background_night</item>
    </style>

    <style name="message_card_style">
        <item name="cardBackgroundColor">@color/black_gray</item>
    </style>

    <style name="message_username_text_style">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="message_text_style">
        <item name="android:textColor">@color/white_2</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="profile_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">38sp</item>
    </style>

    <style name="profile_subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="profile_connection_subtitle">
        <item name="android:textColor">@color/green_2</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayoutList" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green_2</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">false</item>
        <item name="android:textSize">22sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonLogoutStyle">
        <item name="backgroundTint">@color/black_gray_4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable" tools:targetApi="honeycomb_mr1">@color/green_2</item>
    </style>

    <style name="SearchEditTextBar">
        <item name="android:background">@color/black_gray_3</item>
        <item name="boxBackgroundColor">@color/black_gray_3</item>
    </style>

    <style name="IconColor">
        <item name="tint">@color/white</item>
    </style>

    <style name="shimmer_card_style">
        <item name="cardBackgroundColor">@color/black_gray_3</item>
        <item name="cardCornerRadius">@dimen/indent_base</item>
    </style>
</resources>