<resources>
    <!-- Base application theme. -->
    <style name="Theme.HomeWork_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="MainBackground">
        <item name="android:background">@color/black_gray_2</item>
    </style>


    <style name="ToolbarBackground">
        <item name="android:background">@color/green</item>
    </style>

    <style name="SubToolbarBackground">
        <item name="android:background">@color/black_gray</item>
    </style>

    <style name="dateTextBackground">
        <item name="android:background">@drawable/date_background_night</item>
    </style>

    <style name="message_card_style">
        <item name="cardBackgroundColor">@color/black_gray</item>
    </style>

    <style name="message_username_text_style">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="message_text_style">
        <item name="android:textColor">@color/white_2</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayoutList" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green_2</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
    </style>
</resources>